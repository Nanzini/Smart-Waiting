            span(class="editComment" id=commenter.id)
                i.fas fa-pen
            input(type="button" class="deleteComment" value="Delete")
            input(type="button" value="OK" class="editCompleted" style="display:none")
            p #{commenter.name}
            input(class="commentValue" disabled="true" style="resize:none" value=commenter.content) 
