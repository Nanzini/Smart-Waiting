mixin comment(commenter)
    .comment
        if (commenter.realUser.id === users.id)
            .icons
                span(class="editComment" id=commenter.id)
                    i(class="fas fa-pen")
                span(class="deleteComment")
                    i(class="fas fa-trash-alt")
                span(class="editCompleted" style="opacity:0;")
                    i(class="fas fa-check")
        p #{commenter.realUser.name}
        input(class="commentValue" disabled="true" style="resize:none" value=commenter.content) 
        p.date #{commenter.createAt} edited

